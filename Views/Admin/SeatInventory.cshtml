@model List<EAD_Project.Models.Reserve>

@{
    ViewBag.Title = "SeatInventory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <br>
        <br>
        <h1>
            Seat Inventory
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Dashboard</li>
            <li class="active">Seat Inventory</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">


            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        List Of Seat Inventory
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Date</th>
                                        <th>Bus Type</th>
                                        <th>Route</th>
                                        <th>Time</th>
                                        <th>Seat.No</th>
                                        <th>Transaction Code</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var s in Model) { 
                                    <tr>
                                        <td>@s.Id</td>
                                        <td>@s.Date1</td>
                                        <td>Luxury</td>
                                        <td>@s.Departure - @s.Arrival</td>
                                        <td>@s.Time1</td>
                                        <td>@s.Seat_Reserve</td>
                                        <td>@s.Transactionum</td>
                                        <td>

                                            <form action="" method="get">
                                                <input type="hidden" name="cid" value="@s.Id">
                                                <a href="#" id=@s.Id class="btn btn-warning delbutton" title="DELETE">Delete</a>
                                            </form>
                                            

                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
    </section>
</div>
      </aside><!-- /.control-sidebar -->
<!-- Add the sidebar's background. This div must be placed
     immediately after the control sidebar -->
<div class="control-sidebar-bg"></div>
    </div><!-- ./wrapper -->

<script src="~/Scripts/jquery1.js"></script>
<script type="text/javascript">
    $(function () {


        $(".delbutton").click(function () {

            //Save the link in a variable called element
            var element = $(this);

            //Find the id of the link that was clicked
            var del_id = element.attr("id");

            //Built a url to send
            var info = 'id=' + del_id;
            if (confirm("Sure you want to delete this update? There is NO undo!")) {

                $.ajax({
                    type: "GET",
                    url: '@Url.Action("SeatDeleted","Admin")',
                    data: info,
                    success: function () {

                    }
                });
                $(this).parents(".record").animate({ backgroundColor: "#fbc7c7" }, "fast")
               .animate({ opacity: "hide" }, "slow");

            }

            return false;

        });

    });
</script>