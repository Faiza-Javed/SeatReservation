                    </select>
                    <br />

                    <!--<label>Arrival</label>-->
                    @Html.LabelFor(model => model.route.Arrival)
                    <select name="Arrival" required="required" id="arrival1">
                        <option selected="selected">Select Arrival</option>
                        
                    </select>
                    <br />

                    <!--<label>Date</label>-->
                    @Html.Label("Date")
                    <input type="Date" name="Date1" value="@DateTime.Now" id="date1" required="required" />
                    <br />

                    <div class="action_btns">
                        <div class="one_half"><a href="#" class="btn back_btn"> Reset</a></div>
                        <div class="one_half last"><input type="submit" value="Search" class="btn btn-red" /></div>
                    </div>
                </form>

            </div>


        </section>
    </div>




    <script type="text/javascript">
        $("#modal_trigger").leanModal({ top: 200, overlay: 0.6, closeButton: ".modal_close" });

